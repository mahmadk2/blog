<h1 align="center", style="color: green"> All Articles </h1>
<div class="col-xs-10 col-xs-offset-5">
<%= link_to 'NEW Article', new_article_path, class: 'btn btn-xs btn-primary' %>
</div>

<% @articles.each do |f| %>
<div class="row">
<div class="col-xs-8 col-xs-offset-2">
<div class="well wel-lg">
<div class="article-title">
<%= link_to f.title, article_path(f)%>
</div>
<div class="article-body">

<%= truncate(f.description, length: 30) %>
</div>
<div class="article-actions">
<%= link_to 'Edit', edit_article_path(f), class: "btn btn-xs btn-primary" %>
<%= link_to 'Show', article_path(f), class: "btn btn-xs btn-info" %>
<%= link_to 'Delete', article_path(f), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger"%>
 </div>
 </div>
 </div>
 </div>

 <%end%>



