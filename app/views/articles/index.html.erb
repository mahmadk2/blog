<h1> All Articles </h1>

<%= link_to 'NEW Article', new_article_path %>

<table>
<tr>
<th> Title </th>
<th> Description </th>
</tr>

<tr>

<% @articles.each do |f| %>

<td> <%= f.title %> </td>
<td> <%= f.description %> </td>
<td><%= link_to 'Edit', edit_article_path(f) %></td>
<td><%= link_to 'Show', article_path(f) %></td>
<td><%= link_to 'Delete', article_path(f), method: :delete, data: {confirm: "Are you sure?"} %></td>
 </tr>

 <%end%>

 </table>

