
	
<h2 align="center" style="color: red">	Title: <%= @article.title %> </h2>


<div class="well col-xs-10 col-xs-offset-1">
<%if @article.user%>
<div class="row">
<div class=" col-xs-10 col-xs-offset-1">
<div class=" well-lg">
 <div align="center">
<%= link_to gravatar_for(@article.user), user_path(@article.user)%>
<div class="article-title">
<%= link_to @article.user.username, user_path(@article.user)%>
</div>
<div class="article-body">
<ul class="listing">

<li><small><%= pluralize(@article.user.articles.count, "article")%></small></li>
</ul>

</div>

</div>

</div>
<%end%>
</div>

</div>
<h2 align="center" style="color: blue" class="center description">Description:</h2>
	<hr>
	<%= @article.description %>

	<div class="article-actions">

<%= link_to 'Back', articles_path, class: "btn btn-xs btn-primary" %>
<%= link_to 'Edit', edit_article_path, class: "btn btn-xs btn-success" %>
<%= link_to 'Delete', article_path, method: :delete, data: {confirm: "are you sure"}, class: "btn btn-xs btn-danger" %>
</div>
</div>
