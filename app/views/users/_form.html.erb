<%= render 'share/errors', obj: @user %>

<div class="row">
<div class="col-xs-12">
<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>


<div class="form-group">
<div class="control-label col-sm-2">
<%= f.label :username  %>
</div>
<div class="col-sm-10">
<%= f.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus: true%>
</div>
</div>

<div class="form-group">
<div class="control-label col-sm-2">
<%= f.label :Email  %>
</div>
<div class="col-sm-10">
<%= f.email_field :email, class: "form-control", placeholder: "Enter Email" %>
</div>
</div>

<div class="form-group">
 <div class="control-label col-sm-2">
 <%= f.label :Password  %>
 </div>
<div class="col-sm-10">
<%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
</div>
</div>


<div class="form-group">
<div class="col-sm-offset-2 col-sm-12">
<%= f.submit(@user.new_record? ? "SignUp" : "Update Account", class: 'btn btn-primary btn-lg') %>
</div>
</div>

  <% end %>
  </div>
  </div>
<div class="col-xs-4 col-xs-offset-6">
 <%=link_to "CENCEL BACK TO LIST", articles_path, class: 'btn btn-xs btn-info btn-lg'  %> 

</div>